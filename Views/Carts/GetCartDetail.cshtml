@model MiniWS.Models.Cart
<h4>Your orders</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th> No.</th>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @{ int row = 0;}
        @foreach (var item in Model.CartItem)
        {
            <tr>
                <td>@(++row)</td>
                <td>@item.Product.ProductName</td>
                <td>@item.Product.UnitPrice</td>
                <td>@item.Quantity</td>
                <td>@item.Total.ToString("n2")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3"></td>
            <td>Sub Total.</td>
            <td class="text-right">@Model.SubTotal</td>
        </tr>
        <tr>
            <td colspan="3"></td>
            <td>VAT 7%</td>
            <td class="text-right">@Model.VatAmount</td>
        </tr>
        <tr>
            <td colspan="3"></td>
            <td>Net Total.</td>
            <td class="text-right">@Model.NetTotal</td>
        </tr>
    </tfoot>
</table>

